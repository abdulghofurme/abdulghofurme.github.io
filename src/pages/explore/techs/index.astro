---
import PageLayout from "@/layouts/Base";
import { getAllExplores, getUniqueTechsWithCount } from "@/utils";

const allExplores = await getAllExplores();
const allTechs = getUniqueTechsWithCount(allExplores);

const meta = {
	title: "All Techs",
	description: "A list of all the techs I've used in my explore",
};
---

<PageLayout meta={meta}>
	<div class="mb-6 flex items-center gap-2">
		<h1 class="title">Technologies</h1>
		<span class="text-sm">({allTechs.length})</span>
	</div>
	<ul class="space-y-4">
		{
			allTechs.map(([tech, val]) => (
				<li class="flex items-center gap-x-2">
					<a
						class="cactus-link inline-block"
						href={`/explore/techs/${tech}/`}
						title={`View posts with the tech: ${tech}`}
						rel="prefetch"
					>
						{tech}
					</a>
					<span class="inline-block">
						- {val} Post{val > 1 && "s"}
					</span>
				</li>
			))
		}
	</ul>
</PageLayout>
