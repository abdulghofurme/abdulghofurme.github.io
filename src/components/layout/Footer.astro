---
import { menuLinks, siteConfig } from "@/site-config";

// const year = new Date().getFullYear();
const year = 2022;
---

<footer
	class="mt-auto flex w-full flex-col-reverse items-start justify-center gap-y-2 pb-4 pt-20 text-center align-top text-gray-500 sm:flex-row sm:justify-between sm:text-xs"
>
	<div class="me-0 sm:me-4 text-left">
		<p>Media dokumentasi & catatan belajar pribadi</p>
		<span class="hidden sm:inline-block">Copyright</span> &copy; {year}{" "}
		{siteConfig.author}
	</div>
	<nav
		aria-label="More on this site"
		class="flex gap-x-6 sm:gap-x-0 sm:divide-x sm:divide-gray-500"
	>
		{
			menuLinks.map((link) => (
				<a
					href={link.path}
					class="py-2 sm:px-2 sm:py-0 sm:hover:text-textColor sm:hover:underline"
				>
					{link.title}
				</a>
			))
		}
	</nav>
</footer>
